<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.scu.smurali.parkonthego.ConfirmationActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BBBBBB"
                android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reservation Details"
                android:id="@+id/textView16"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Date:"
        android:id="@+id/textView20"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="05/19/2016"
        android:id="@+id/confirmationEndDateTextView"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Date:"
        android:id="@+id/textView22"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/confirmationEndDateTextView"
        android:layout_toStartOf="@+id/confirmationEndDateTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="05/19/2016"
        android:id="@+id/confirmationStartDateTextView"
        android:textColor="#000000"
        android:layout_above="@+id/textView24"
        android:layout_toEndOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time:"
        android:id="@+id/textView24"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="05:00 PM"
        android:id="@+id/confirmationStartTimeTextView"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignStart="@+id/confirmationStartDateTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time:"
        android:id="@+id/textView26"
        android:layout_alignTop="@+id/confirmationStartTimeTextView"
        android:layout_alignStart="@+id/textView22"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="09:00 PM"
        android:id="@+id/confirmationEndTimeTextView"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignStart="@+id/confirmationEndDateTextView"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/textView28"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView26"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="431, Lafayette Street, Santa Clara, CA 95051"
        android:id="@+id/confirmationLocationTextView"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView28"
        android:layout_alignStart="@+id/confirmationTotalTimeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Hrs:"
        android:id="@+id/textView30"
        android:textColor="#000000"
        android:layout_below="@+id/confirmationLocationTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4 hours"
        android:id="@+id/confirmationTotalTimeTextView"
        android:textColor="#000000"
        android:layout_above="@+id/textView32"
        android:layout_alignStart="@+id/confirmationStartTimeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price/hr:"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView30"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$4"
        android:id="@+id/confirmationPricePerHrTextView"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignStart="@+id/confirmationTotalTimeTextView"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Price:"
        android:id="@+id/textView34"
        android:layout_below="@+id/textView32"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$16"
        android:id="@+id/confirmationTotalPriceTextView"
        android:editable="false"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignStart="@+id/confirmationPricePerHrTextView"
        android:layout_marginTop="15dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BBBBBB"
        android:layout_below="@+id/textView34"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment Method"
        android:id="@+id/textView36"
        android:layout_below="@+id/textView34"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Payment Gateway UI will appear here"
        android:id="@+id/confirmationPaymentGateway"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve"
        android:id="@+id/confirmationReserveButton"
        android:layout_below="@+id/confirmationPaymentGateway"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
