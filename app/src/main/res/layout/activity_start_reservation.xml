<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.scu.smurali.parkonthego.StartReservationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reservation Address"
        android:id="@+id/startReservationAddressTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time:"
        android:id="@+id/startTime"
        android:layout_below="@+id/startReservationAddressTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time:"
        android:id="@+id/endTime"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/startTime"
        android:layout_alignEnd="@+id/startTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/start_reservation_start_time"
        android:id="@+id/startReservationStartTimeTextView"
        android:layout_alignTop="@+id/startTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/start_reservation_end_time"
        android:id="@+id/startReservationEndTimeTextView"
        android:layout_alignTop="@+id/endTime"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/stopReservationTapToStop"
        android:layout_below="@+id/endTime"
        android:layout_marginTop="29dp"
        android:src="@drawable/circle"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/endTime"
        android:layout_alignEnd="@+id/startReservationAddressTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap to START"
        android:id="@+id/startReservationTapToStart"
        android:layout_marginTop="93dp"
        android:layout_alignTop="@+id/stopReservationTapToStop"
        android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
